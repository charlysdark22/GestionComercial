{
  "name": "crm-adaptable-system",
  "version": "1.0.0",
  "description": "Sistema CRM adaptable a cualquier tipo de negocio",
  "main": "index.js",
  "scripts": {
    "web:dev": "cd web && npm run dev",
    "web:build": "cd web && npm run build",
    "mobile:android": "cd mobile && npx react-native run-android",
    "mobile:ios": "cd mobile && npx react-native run-ios",
    "mobile:start": "cd mobile && npx react-native start",
    "install:all": "npm install && cd web && npm install && cd ../mobile && npm install",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest"
  },
  "workspaces": [
    "web",
    "mobile",
    "shared"
  ],
  "keywords": [
    "crm",
    "react",
    "react-native",
    "business-management",
    "whatsapp-integration",
    "project-management"
  ],
  "author": "CRM Adaptable Team",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.0",
    "typescript": "^5.1.0"
  }
}